{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "clipboard:allow-read-text",
    "clipboard:allow-write-text",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:read-files",
    "fs:scope-desktop",
    "fs:scope-document",
    "fs:scope-download"
  ]
}
